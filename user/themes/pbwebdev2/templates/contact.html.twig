{% extends 'partials/base.html.twig' %}

{% block content %}
    <div class="container contact">
        <div class="row">
            <div class="col-xs-12">
                <h1>Contact us, we'd love to hear from you...</h1>
            </div>
            <div class="col-xs-12 col-md-6">
                {{ page.content }}
            </div>
            <div class="col-xs-12 col-md-6">

                <form id="contact" class="contact" action="https://getsimpleform.com/messages?form_api_token=4142c8339d95059bcee31e98ab7e1784" method="post">
                    <h2>Leave us a message</h2>

                    <div class="col-xs-12">
                        <label for="name">Name *</label>
                        <input id="name" name="name" type="text" required="" size="20" placeholder="Name">
                    </div>
                    <div class="col-xs-12">
                        <label for="email">Email *</label>
                        <input id="email"  name="email" type="text" required="" size="20" placeholder="Email">
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <label for="phone">Phone *</label>
                        <input id="phone" name="phone" type="text" required="" size="20" placeholder="Phone">
                    </div>
            <div class="col-xs-12 col-sm-6">
                        <label for="company">Company *</label>
                        <input id="company" name="company" type="text" required="" size="20" placeholder="Company">
            </div>
            <div class="col-xs-12 col-sm-6">
                        <label for="budget">Project budget *</label>
                        <select id="budget" name="budget" required="">
                            <option value=""></option>
                            <option value="$5,000 - $10,000">$5,000 - $10,000</option>
                            <option value="$20,000 - $30,000">$20,000 - $30,000</option>
                            <option value="$30,000+">$30,000+</option>
                            <option value="Unknown">Unknown</option>
                        </select>
            </div>
            <div class="col-xs-12 col-sm-6">
                        <label for="time">Time frame *</label>
                        <select name="time" name="time" required="">
                            <option value=""></option>
                            <option value="Immediate">Immediate</option>
                            <option value="4 weeks">4 weeks</option>
                            <option value="8 weeks">8 weeks</option>
                            <option value="12 weeks">12 weeks</option>
                            <option value="I'm not tied to a time frame">I'm not tied to a time frame</option>
                        </select>
            </div>
            <div class="col-xs-12">
                        <label for="message">Message</label>
                            <textarea id="message" name="message" cols="50" rows="5"></textarea>
            </div>
            <div class="col-xs-12">

                    <input type='hidden' name='redirect_to' value='{{ base_url_absolute }}/thanks' />

                    <input type='submit' class="btn btn-primary" value='Submit' />
            </div>
            </fieldset>

                </form>



            </div>
        </div>
    </div>
{% endblock %}
