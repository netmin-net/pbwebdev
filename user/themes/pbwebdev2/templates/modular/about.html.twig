<div class="modular-row about hidden-xs">
    <div class="container">
        <div  class="row">
            <h2>{{ page.header.title }}</h2>
            <div class="col-xs-12 col-md-6 tag">
                <h3>{{ page.header.feature.tag }}</h3>
            </div>
            <div class="col-xs-12 col-md-6">
                {{ content }}
            </div>
        </div>
        <footer>
            {% for button in page.header.buttons %}
                <a href="{{ button.url }}" class="btn btn-large btn-primary">{{ button.text }}</a>
            {% endfor %}
        </footer>
    </div>
</div>
