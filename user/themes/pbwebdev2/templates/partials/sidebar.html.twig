{% set feed_url = blog.url == '/' or blog.url == base_url_relative ? (base_url_relative~'/'~blog.slug) : blog.url %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}

{% if config.plugins.simplesearch.enabled %}
<div class="sidebar-content">
    <h3>SimpleSearch</h3>
    {% include 'partials/simplesearch_searchbox.html.twig' %}
</div>
{% endif %}
{% if config.plugins.relatedpages.enabled and related_pages|length > 0 %}
    <h3>Related Posts</h3>
    {% include 'partials/relatedpages.html.twig' %}
{% endif %}
{% if config.plugins.random.enabled %}
<div class="sidebar-content">
    <h3>Random Article</h3>
    <a class="button" href="{{ base_url_relative }}/random"><i class="fa fa-retweet"></i> I'm Feeling Lucky!</a>
</div>
{% endif %}
<div class="sidebar-content ebook">
	<h3>Drive Traffic &amp; Convert Customers!</h3>
	<p>Download our e-book to learn how you can grow your business by driving more traffic and converting it into sales!</p>
    <p>Enter your email to download the e-book</p>
    <script type="text/javascript" src="https://engine.pbwebdev.com/form/generate.js?id=2"></script>
</div>
{% if config.plugins.taxonomylist.enabled %}
<div class="sidebar-content">
    <h3>Popular Tags</h3>
    {% include 'partials/taxonomylist.html.twig' with {'base_url':new_base_url, 'taxonomy':'tag'} %}
</div>
{% endif %}
{% if config.plugins.archives.enabled %}
<div class="sidebar-content">
    <h3>Archives</h3>
	{% include 'partials/archives.html.twig' with {'base_url':new_base_url} %}
</div>
{% endif %}
{% if config.plugins.feed.enabled %}
<div class="sidebar-content">
    <h3>Syndicate</h3>
    <div class="btn-group">
        <a class="btn btn-primary" href="{{ feed_url }}.atom"><i class="fa fa-rss-square"></i> Atom 1.0</a>
        <a class="btn btn-primary" href="{{ feed_url }}.rss"><i class="fa fa-rss-square"></i> RSS</a>
    </div>
</div>
{% endif %}
